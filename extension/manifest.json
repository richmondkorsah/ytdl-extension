{
    "manifest_version": 2,
    "name": "Youtube Video Downloader",
    "version": "1.0",
    "description": "Download videos from YouTube easily.",

    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "permissions": [
        "activeTab",
        "downloads",
        "tabs",
        "storage",
        "https://www.youtube.com/*",
        "http://localhost:5000/*"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png"
        }   
    },

    "content_scripts": [
        {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"]
        }
    ]
}
